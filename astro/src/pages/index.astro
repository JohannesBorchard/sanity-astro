---
import { sanityClient } from '../shared/api/sanityClient'
import type { Post } from '../shared/types/post'

const posts = await sanityClient.fetch<Post[]>(`*[_type == "post"] | order(publishedAt desc)`)
---

<html lang="de">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Meine Marketing Site</title>
	</head>
	<body>
		<h1>Willkommen auf meiner Website</h1>

		<section>
			<h2>Neueste Blog Posts</h2>
			{
				posts.map((post) => (
					<article>
						<h3>{post.title}</h3>
						{post.publishedAt && (
							<p>Ver√∂ffentlicht: {new Date(post.publishedAt).toLocaleDateString('de-DE')}</p>
						)}
						{post.body?.map((block) => {
							if (block._type === 'block') {
								return <p>{block.children?.[0]?.text}</p>
							}
							return null
						})}
						<hr />
					</article>
				))
			}
		</section>
	</body>
</html>
